{
   "name": "node-starter",
   "version": "0.0.0",
   "scripts": {
      "dev": "nodemon --watch src --exec ts-node src/index.ts",
      "build": "rm -rf dist/* && npx tsc",
      "start": "NODE_ENV=development npm run build && nodemon dist/index.js",
      "start:prod": "NODE_ENV=production npm run build && nodemon dist/index.js",
      "prettier": "npx prettier --write 'src/**/*.ts'",
      "debug": "ndb index.ts"
   },
   "dependencies": {
      "@types/cors": "^2.8.17",
      "@typescript-eslint/eslint-plugin": "^7.16.0",
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "email-validator": "^2.0.4",
      "express": "^4.17.1",
      "joi": "^17.13.3",
      "mongodb": "^6.8.0",
      "mongoose": "^8.5.1",
      "morgan": "^1.10.0",
      "nodemon": "^3.1.4",
      "prettier": "^3.3.3",
      "slugify": "^1.6.6",
      "ts-lib": "^0.0.5",
      "ts-node": "^10.9.2",
      "winston": "^3.13.1"
   },
   "devDependencies": {
      "@babel/core": "^7.24.8",
      "@babel/node": "^7.24.8",
      "@babel/preset-env": "^7.24.8",
      "@babel/preset-typescript": "^7.24.7",
      "@types/express": "^4.17.21",
      "@types/morgan": "^1.9.9",
      "@types/node": "^20.14.10",
      "@types/validator": "^13.12.2",
      "typescript": "^5.5.3",
      "ndb": "^1.1.5"
   }
}
